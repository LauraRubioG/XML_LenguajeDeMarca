<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE facturas [

   <!ELEMENT facturas (factura, dato_emisor, dato_cliente, detalle_factura)>
   
   <!ELEMENT factura (#PCDATA)>
        <!ATTLIST factura numero CDATA #REQUIRED>
        <!ATTLIST factura fecha CDATA #REQUIRED>
   
   <!ELEMENT dato_emisor (nombre, cif, telefono)>
   <!ELEMENT dato_cliente (nombre, cif, telefono)>
    <!ELEMENT nombre (#PCDATA)>
    <!ELEMENT cif (#PCDATA)>
    <!ELEMENT telefono (#PCDATA)>
    
  <!ELEMENT detalle_factura (datos)+>   
  <!ELEMENT datos (descripcion, cantidad, oferta?, pvp)>
        <!ATTLIST datos codigo-artuculo ID #REQUIRED>
        <!ATTLIST datos tipo (Libro | DVD | Varios) #IMPLIED>
  <!ELEMENT descripcion (#PCDATA)>
  <!ELEMENT cantidad (#PCDATA)>
  <!ELEMENT oferta EMPTY>
  <!ELEMENT pvp (#PCDATA)>
        <!ATTLIST detalle_factura importe CDATA #REQUIRED>
]>

